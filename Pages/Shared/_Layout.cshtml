<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MeuPontoOnline</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">

    <!-- Bootstrap & Estilos -->
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="/MeuPontoOnline.styles.css" asp-append-version="true" />

    <style>
        .navbar-custom {
            background: linear-gradient(to right, #1e3a8a, #00bfff);
            padding: 1rem 2rem;
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav-link {
                color: white !important;
                font-weight: 500;
            }

                .navbar-custom .nav-link:hover {
                    text-decoration: underline;
                }

        .footer {
            background-color: #1e3a8a;
            color: #ffffff;
            padding: 1rem 0;
        }

            .footer a {
                color: #add8e6;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-custom">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <i class="fa-regular fa-clock me-2"></i> MeuPontoOnline
                </a>
                <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon bg-light"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Registro/Registrar">Registrar Ponto</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Registro/Meus">Meus Registros</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Relatorios">Relatórios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Perfil">Meu Perfil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Logout">Sair</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container py-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
