@page "/setor"
@model MeuPontoOnline.Pages.CadastroSetor.CadastroModel

@{
    ViewData["Title"] = "Cadastro de Setor";
}

<h2>Cadastro de Setor</h2>

<form method="post">
    <div class="form-group">
        <label>Nome</label>
        <input asp-for="NovoSetor.Nome" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Cadastrar</button>
</form>

@if (!string.IsNullOrEmpty(Model.Mensagem))
{
    <div class="alert alert-success mt-2">@Model.Mensagem</div>
}
