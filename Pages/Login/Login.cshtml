@page "/Login"
@model MeuPontoOnline.Pages.Login.LoginModel
@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/Login.css" />

<div class="container">
    <div class="card">
        <div class="card-header">
            <i class="bi bi-box-arrow-in-right me-2"></i> Acesso ao Sistema
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-card-list me-1"></i> Matrícula
                    </label>
                    <input asp-for="Matricula" class="form-control" required placeholder="Digite sua matrícula" />
                    <span asp-validation-for="Matricula" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-lock-fill me-1"></i> Senha
                    </label>
                    <input asp-for="Senha" class="form-control" type="password" required placeholder="Digite sua senha" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-door-open me-1"></i> Entrar
                </button>
            </form>

            @if (Model.MensagemErro != null)
            {
                <div class="alert alert-danger mt-3">
                    <i class="bi bi-exclamation-circle-fill me-1"></i> @Model.MensagemErro
                </div>
            }
        </div>
    </div>
</div>

<footer class="footer text-center">
    <div class="container">
        &copy; 2025 - MeuPontoOnline
    </div>
</footer>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
