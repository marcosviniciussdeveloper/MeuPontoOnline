@page "/Cadastro"
@model MeuPontoOnline.Pages.CadastroUsuarios.CadastroModel
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Cadastro de Funcionário";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">
                <i class="bi bi-person-plus-fill me-2"></i> Cadastro de Funcionário
            </h4>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-person-fill me-1"></i> Nome
                    </label>
                    <input asp-for="NovoFuncionario.Nome" class="form-control" required placeholder="Nome completo" />
                    <span asp-validation-for="NovoFuncionario.Nome" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-calendar-event me-1"></i> Data de Nascimento
                    </label>
                    <input asp-for="NovoFuncionario.DataNascimento" class="form-control" type="date" required />
                    <span asp-validation-for="NovoFuncionario.DataNascimento" class="text-danger"></span>
                </div>


                <div class="form-group mb-3">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-briefcase-fill me-1"></i> Tipo de Contrato
                    </label>
                    <input asp-for="NovoFuncionario.TipoContrato" class="form-control" placeholder="CLT, Estágio, etc." />
                    <span asp-validation-for="NovoFuncionario.TipoContrato" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-diagram-3-fill me-1"></i> Setor
                    </label>
                    <select asp-for="NovoFuncionario.SetorId" asp-items="Model.ListaDeSetores" class="form-control">
                        <option value="">-- Selecione o Setor --</option>
                    </select>
                    <span asp-validation-for="NovoFuncionario.SetorId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-gear-fill me-1"></i> Função
                    </label>
                    <input asp-for="FuncaoNome" class="form-control" required placeholder="Digite o nome da função" />
                    <span asp-validation-for="FuncaoNome" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-envelope-fill me-1"></i> Email
                    </label>
                    <input asp-for="NovoFuncionario.Email" class="form-control" type="email" required placeholder="exemplo@email.com" />
                    <span asp-validation-for="NovoFuncionario.Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-lock-fill me-1"></i> Senha
                    </label>
                    <input asp-for="Senha" class="form-control" type="password" required placeholder="Crie uma senha segura" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success w-100">
                    <i class="bi bi-check-circle me-1"></i> Cadastrar Funcionário
                </button>
            </form>

            @if (Model.Mensagem != null)
            {
                <div class="alert alert-success mt-3">
                    <i class="bi bi-check-circle-fill me-1"></i> @Model.Mensagem
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
